{
  "name": "@wishbeam/db",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "build": "bun build --entrypoints ./src/migrate.ts --outdir ./dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run ./src/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@wishbeam/env": "workspace:*",
    "drizzle-kit": "catalog:drizzle",
    "drizzle-orm": "catalog:drizzle",
    "uuid": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@wishbeam/typescript-config": "workspace:*",
    "typescript": "catalog:"
  }
}
