{
  "name": "@wishbeam/auth",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./permissions": "./src/permissions.ts"
  },
  "scripts": {
    "build": "bun build --entrypoints ./src/generate-test-users.ts --outdir ./dist --target bun",
    "generate-db-schema": "bun exec \"DATABASE_URL=url bunx @better-auth/cli@latest generate --config src/index.ts --output ./generated/auth-schema.ts --yes\"",
    "generate-test-users": "bun run ./src/generate-test-users.ts"
  },
  "dependencies": {
    "@wishbeam/db": "workspace:*",
    "@wishbeam/env": "workspace:*",
    "better-auth": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@wishbeam/typescript-config": "workspace:*",
    "typescript": "catalog:"
  }
}
