{
  "name": "wishbeam",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "turbo format:check lint typecheck",
    "clean": "turbo clean clean:root",
    "clean:root": "git clean -xdf .turbo node_modules",
    "compose": "docker compose -f docker-compose.yaml -f docker-compose.dev.yaml up --build -d",
    "deps": "pnpm outdated -r",
    "deps-w": "pnpm update -r",
    "deps-w-major": "pnpm update -r --latest",
    "dev": "turbo dev",
    "fix": "turbo format lint:fix typecheck",
    "format": "turbo format format:root",
    "format:check": "turbo format:check format:root:check",
    "format:root": "prettier . \"!./apps/**\" \"!./packages/**\" \"!./tools/**\" --write",
    "format:root:check": "prettier . \"!./apps/**\" \"!./packages/**\" \"!./tools/**\" --check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "start": "turbo start",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "prettier": "@wishbeam/prettier-config",
  "devDependencies": {
    "@wishbeam/prettier-config": "workspace:*",
    "cross-env": "^10.1.0",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.17.1"
}
